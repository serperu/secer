main([
		"-f", File, 
		"-li", Line, 
		"-var", Var,
		"-oc", Oc,
		"-funs", Fun,
		"-to", Time
	]) -> 

        InputFuns = string:tokens(Fun,",[]"),
		Res = try  
			list_to_integer(Line), 
			list_to_integer(Oc),
			list_to_integer(Time)
		catch 
			_:_ -> 
				{-1, -1}
		end,
		case Res of 
			{-1, -1} -> 
				usage(2);
			_ -> 
				[secer:run([File,Line,Var,Oc,IFun,Time])|| IFun<- InputFuns]
		end;
