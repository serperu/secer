main(["-pois", Pois, "-funs", FunList, "-to", Time, "-silent"]) ->
	PoisFun = Pois++".",

	case lists:member($:,Pois) of
		true ->
			[Module | _] = string:tokens(Pois,":"),
			compile:file(Module++".erl",[]),
