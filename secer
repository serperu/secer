			list_to_integer(Time)
		catch 
			_:_ -> 
				{-1, -1}
		end,
		case Res of 
			{-1, -1} -> 
				usage(1);
			{L1,L2,T} -> 
				PoisRels = 
					[{{list_to_atom(File1),L1,{var,list_to_atom(Var1)},1},
					  {list_to_atom(File2),L2,{var,list_to_atom(Var2)},1}}], 
				[secer:run(PoisRels,IFun,T,sequential,empty)|| IFun<- InputFuns] %NEWFORMAT
		end;
